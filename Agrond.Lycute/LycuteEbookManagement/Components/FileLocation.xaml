<UserControl x:Class="LycuteEbookManagement.Components.FileLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             Height="700" Width="1280">
    <UserControl.Background>
        <SolidColorBrush Color="Chocolate" Opacity=".90" />
    </UserControl.Background>
    <Grid>
        <TextBox Style="{StaticResource textBoxStyle}" Height="50" HorizontalAlignment="Left" Margin="235,356,0,0" Name="txtFileLocation" VerticalAlignment="Top" Width="493" />
        <Button Style="{StaticResource btnGlass}" Content="Browser" Height="50" Margin="731,356,0,0" Name="btn_GetFile" VerticalAlignment="Top" HorizontalAlignment="Left" Width="103" Click="btn_GetFile_Click" />
        <Button Style="{StaticResource btnGlass}" Content="Ok" Height="50" HorizontalAlignment="Left" Margin="837,356,0,0" Name="btn_OK" VerticalAlignment="Top" Width="94" Click="btn_OK_Click" />
        <Button Content="Cancel" Height="50" HorizontalAlignment="Left" Margin="934,356,0,0" Name="btn_Cancel" Style="{StaticResource btnGlass}" VerticalAlignment="Top" Width="94" />
    </Grid>
</UserControl>
